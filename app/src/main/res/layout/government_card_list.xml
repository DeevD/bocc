<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- President Office-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_president_office"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:elevation="@dimen/card_elevation"
        android:paddingBottom="4dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_president_office"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_president_office"/>
            <TextView
                android:id="@+id/tv_president_office_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="President Office"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tv_president_office_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To contact to Myanmar President Office"
                android:layout_below="@+id/tv_president_office_header"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <!-- Labour Ministry-->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_labour_ministry"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:elevation="@dimen/card_elevation"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_labour_ministry"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_labour"/>
            <TextView
                android:id="@+id/tv_labour_ministry_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ministry of Labour"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tv_labour_ministry_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To contact to ministry of labour"
                android:layout_below="@+id/tv_labour_ministry_header"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <!-- Immigration -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_ministry_of_immigration"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:elevation="@dimen/card_elevation"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_fire_station"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_moip" />
            <TextView
                android:id="@+id/tv_ministry_of_immigration_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOIP"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tv_ministry_of_immigration_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To contact to ministry of immigration"
                android:layout_below="@+id/tv_ministry_of_immigration_header"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>




</LinearLayout>