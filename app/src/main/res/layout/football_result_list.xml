<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_xxxlarge"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@color/colorAccent"
    android:id="@+id/rl_footballRowContainer">



    <RelativeLayout
        android:id="@+id/rl_footballResultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_football_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_24dp"
            android:alpha="0.6"/>
        <TextView
            android:id="@+id/tv_resultDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_small"
            android:text="2017-05-11"
            android:layout_alignLeft="@+id/iv_football_result_date"
            />
        <ImageView
            android:id="@+id/iv_football_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_receipt_black_24dp"
            android:layout_below="@+id/tv_resultDate"
            android:layout_marginTop="@dimen/margin_v_small"
            android:alpha="0.6"/>
        <TextView
            android:id="@+id/tv_resultContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_v_small"
            android:maxLines="2"
            android:scrollHorizontally="false"
            android:text="Premier League : Arsenal 2 - 0 Southamton "
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_below="@+id/tv_resultDate"
            />
    </RelativeLayout>

</RelativeLayout>