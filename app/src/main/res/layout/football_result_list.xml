<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="horizontal"

    android:id="@+id/rl_footballRowContainer">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="9dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_height="match_parent">


    <RelativeLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/rl_footballResultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:padding="8dp"
            android:id="@+id/iv_football_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_24dp"
            android:alpha="0.6"/>
        <TextView
            android:padding="6dp"
            android:id="@+id/tv_resultDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_small"
            android:text="2017-05-11"
            android:textColor="#000"

            android:layout_alignLeft="@+id/iv_football_result_date"
            />
        <ImageView
            android:padding="8dp"
            android:id="@+id/iv_football_result_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/football"
            android:layout_below="@+id/tv_resultDate"
            android:layout_marginTop="@dimen/margin_v_small"
            android:alpha="0.6"/>
        <TextView
            android:padding="6dp"
            android:textColor="#000"
            android:id="@+id/tv_resultContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_v_small"
            android:maxLines="2"
            android:scrollHorizontally="false"
            android:text="Premier League : Arsenal 2 - 0 Southamton "
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_below="@+id/tv_resultDate"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>